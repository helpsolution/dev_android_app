<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main_relative"
    style="@style/BranchBank_Relative_Main">

    <ImageView
        android:id="@+id/icon_house"
        style="@style/BranchBank_Relative_HouseIcon"
        android:src="@drawable/icon_house" />

    <TextView
        android:id="@+id/adress"
        style="@style/BranchBank_Relative_Address"
        android:text="@string/branch.bank.address" />

    <TextView
        android:id="@+id/name"
        style="@style/BranchBank_Relative_Name"
        android:text="@string/branch.bank.name" />

    <TextView
        style="@style/BranchBank_Relative_Disatance"
        android:text="@string/branch.bank.distance" />

</RelativeLayout>